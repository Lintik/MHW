<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHW.Views.BuilderPage"
             Title="Builder">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Search" Icon="ic_search_white_24dp.png" Clicked="Search_Clicked">

        </ToolbarItem>

        <ToolbarItem Text="Filter Search" Order="Secondary" Clicked="FilterItem_Clicked">

        </ToolbarItem>
        <ToolbarItem Text="Settings" Order="Secondary" Clicked="Settings_Clicked">
            
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Weapon"/>
            <Label Text="Armor"/>
            <Label Text="Head"/>
            <Label Text="Body"/>
            <Label Text="Arms"/>
            <Label Text="Waist"/>
            <Label Text="Legs"/>
            <Label Text="Accesorry"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>